@model iBunter.Models.CompanyModel

    @foreach (var p in Model.Rating)
{
    <div class="row" style="margin: 0.5em;" id="@p.Id">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <h4>@p.Name  <small><small class="entry-form-font-colour">@p.Description</small></small></h4>
            <div class="ratting-item" data-pid="@p.Id">
                <input class="rating" name="@p.Id" type="radio" value="1" @(p.Rated == 1 ? "checked='checked'" : "") />
                <input class="rating" name="@p.Id" type="radio" value="2" @(p.Rated == 2 ? "checked='checked'" : "") />
                <input class="rating" name="@p.Id" type="radio" value="3" @(p.Rated == 3 ? "checked='checked'" : "") />
                <input class="rating" name="@p.Id" type="radio" value="4" @(p.Rated == 4 ? "checked='checked'" : "") />
                <input class="rating" name="@p.Id" type="radio" value="5" @(p.Rated == 5 ? "checked='checked'" : "") />                
            </div>
            <span class="result"></span>
        </div>
    </div>

}
